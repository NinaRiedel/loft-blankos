{
  "name": "qr-ticket-generator",
  "version": "1.0.0",
  "description": "Generate concert tickets with QR codes",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "start": "tsx src/index.ts",
    "generate": "tsx src/index.ts",
    "generate-ids": "tsx src/generateIdsAndCsv.ts",
    "generate-pdfs": "tsx src/generatePdfs.ts",
    "test-layout": "tsx src/testLayout.ts",
    "parse-seating": "tsx src/parseSeatingScript.ts",
    "detect-encoding": "tsx src/detectEncoding.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "qr-code",
    "tickets",
    "pdf"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "qrcode": "^1.5.3",
    "pdfkit": "^0.15.0",
    "csv-writer": "^1.6.0",
    "papaparse": "^5.4.1",
    "pdf-lib": "^1.17.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/qrcode": "^1.5.5",
    "@types/pdfkit": "^0.13.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "vite": "^6.0.5",
    "vitest": "^1.1.0"
  }
}

